<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/profile_edit_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="10dp"
        app:container_background_color="#000000ff"
        app:container_border_color="#000000ff"
        app:container_enable_drag="false"
        app:container_gravity="right"
        app:tag_background_color="@color/light_d"
        app:tag_border_color="@color/light_d"
        app:tag_clickable="true"
        app:tag_enable_cross="true"
        app:tag_text_color="@color/light_0"
        app:tag_theme="none" />

</FrameLayout>