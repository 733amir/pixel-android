<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_f"
    android:orientation="vertical"
    tools:context="com.rahnemacollege.pixel.FirstPageActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/first_page_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        app:tabBackground="@drawable/tab_color_selector"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/primary_text"
        app:tabTextColor="@color/white" />

    <ProgressBar
        android:id="@+id/first_page_loading"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_f"
        android:indeterminate="true"
        android:visibility="invisible" />

    <android.support.v4.view.ViewPager
        android:id="@+id/first_page_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />


</LinearLayout>
