<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_interest_edit"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@drawable/tag_shape"
    android:padding="@dimen/profile_page_interests_inner_padding"
    android:layout_margin="@dimen/profile_page_interests_outer_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_0"
        android:text="Interest" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_close_black_24dp" />

</LinearLayout>