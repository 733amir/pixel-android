<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/friends_top_and_bottom_padding"
    android:paddingLeft="@dimen/friends_left_and_right_padding"
    android:paddingRight="@dimen/friends_left_and_right_padding"
    android:paddingTop="@dimen/friends_top_and_bottom_padding"
    android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friends_i_profileimage"
        android:layout_width="@dimen/friends_profile_image_diameter"
        android:layout_height="@dimen/friends_profile_image_diameter"
        android:src="@mipmap/default_profile_image" />

    <TextView
        android:id="@+id/friends_tv_fullname"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/friends_left_and_right_padding"
        android:layout_marginRight="@dimen/friends_left_and_right_padding"
        android:layout_weight="1" />

    <Button
        android:id="@+id/friends_b_viewprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_buttons_green"
        android:paddingLeft="@dimen/friends_view_profile_button_padding"
        android:paddingRight="@dimen/friends_view_profile_button_padding"
        android:text="@string/friends_button_viewprofile"
        android:textColor="@color/first_page_button_foreground" />
</LinearLayout>